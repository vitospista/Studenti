<Window x:Class="CorsoEnaip2018_Threads_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorsoEnaip2018_Threads_WPF"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Name="CounterLabel" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"></Label>
        <Button Name="StartThreadsButton" Grid.Row="1" Click="StartThreadsButton_Click">Start Threads!</Button>
    </Grid>
</Window>
