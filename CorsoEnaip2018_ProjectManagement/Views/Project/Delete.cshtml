@model Project

@{
  Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
  <title>Cancella progetto</title>
  <link rel="stylesheet" href="~/bootstrap.css" />
</head>
<body>
  <div class="container" style="width: 50%;">
    <h1>Elimina Progetto</h1>
    <form method="post">
      <div class="form-group">
        <p>Vuoi davvero cancellare il progetto '@Model.Name'?</p>
      </div>
      <div class="form-group">
        <a class="btn btn-default" href="/Project/Index">Annulla</a>
        <input type="submit" class="btn btn-danger" value="Conferma" />
      </div>
    </form>
  </div>
</body>
</html>