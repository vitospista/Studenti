<Window x:Class="CorsoEnaip2018_Interfaces2WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorsoEnaip2018_Interfaces2WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0">Name:</Label>
        <Label Grid.Row="1" Grid.Column="0">Surname:</Label>
        <Label Grid.Row="2" Grid.Column="0">Complete Name:</Label>

        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Surname}"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="CompletNameTextBox"/>
        <local:UserControl1 Grid.Row="3"/>
    </Grid>
    
</Window>
